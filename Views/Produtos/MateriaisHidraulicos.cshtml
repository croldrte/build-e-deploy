<div class="container my-5">
    @if (Model != null || Model.Any())
    {
        <div class="row row-cols-1 row-cols-lg-5 g-4 mb-5">
            @foreach (var produto in Model)
            {
                <div class="col product">
                    <img src="@produto.UrlImagem" alt="@produto.Nome" class="img-fluid mb-2">
                    <p class="product-name">@produto.Nome</p>
                    <p class="text-orange fs-6">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < produto.Avaliacao)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    </p>
                    <p><s>@produto.Preco</s></p>
                    <p><b>@(produto.Preco * 0.95m)</b>/un</p>
                    <p>10x de @(produto.Preco / 10) sem juros</p>
                </div>
            }
        </div>
    }
    else
    {
        <p>Nenhum produto encontrado.</p>
    }
</div>